{% extends 'layout/master.twig' %}
{% block head %}
    <style>
        .thumb {

            height: 100px;
            aspect-ratio: 16 / 9;
            border-radius: 7px;
        }

    </style>
{% endblock head %}

{% block content %}
    <div class="container appContent" >
        <div class="sectionSeparator"></div>
        <table class="table table-sm">
            <thead>
            <tr style="background-color: #4e4e4e; color: antiquewhite">
                <th>Show</th>
                <th>Edit</th>
                <th>Delete</th>
                <th>Download</th>
                <th>Thumb</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>

            {% for image in images %}
            <tr class="detailRow" data-iid="1" data-name="/uploader/thumbs?file=6d4c300e8b0095c557375f4f32d54c08d07d2d34.jpg">
                <td>
                    <a href="/gallery/1" class="btn">
                        <i class="fas fa-eye fa-2x"></i>
                    </a>
                </td>
                <td>
                    <a href="/gallery/1/edit" class="btn">
                        <i class="fas fa-pencil fa-2x"></i>
                    </a>
                </td>
                <td>
                    <a href="" class="btn">
                        <form class="_alertBeforePost" action="/gallery/1" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn" style="color: orangered" onclick="this.form.submit()">
                                <i class="fas fa-trash fa-2x"></i>
                            </button>
                        </form>
                    </a>
                </td>
                <td>
                    <a href="http://192.168.25.25/download?file=6d4c300e8b0095c557375f4f32d54c08d07d2d34.jpg" class="btn">
                        <i class="fas fa-download fa-2x"></i>
                    </a>
                </td>
                <td>
                    <div class="wrapper_" data-iid="1" data-name="/uploader/thumbs?file=6d4c300e8b0095c557375f4f32d54c08d07d2d34.jpg">
                        <img src="http://192.168.8.18/api/cache/{{ image.storage }}" class="thumb" alt="">
                    </div>

                </td>
                <td>
                    <table class="table-borderless">
                        <tbody style="width: 100%">
                        <tr>
                            <th style="text-align: left">
                            <span>
                               {{ image.name }}
                            </span><br>
                                <span> (image/jpeg) (1920/1280)px <code style="font-size: 1rem">462.72kB</code></span>
                            </th>
                        </tr>
                        <tr style="margin: 0;padding: 0">
                            <th style="margin: 0;padding: 0">
                                <p style="text-align: justify">
                                </p>
                            </th>
                        </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
